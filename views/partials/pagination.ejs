<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-4">
        <% if (current > 1) { %>
            <li class="page-item">
                <a class="page-link" href="/listings?page=<%= current - 1 %>">Previous</a>
            </li>
        <% } %>

        <% for (let i = 1; i <= pages; i++) { %>
            <li class="page-item <%= current === i ? 'active' : '' %>">
                <a class="page-link" href="/listings?page=<%= i %>"><%= i %></a>
            </li>
        <% } %>

        <% if (current < pages) { %>
            <li class="page-item">
                <a class="page-link" href="/listings?page=<%= current + 1 %>">Next</a>
            </li>
        <% } %>
    </ul>
</nav>
